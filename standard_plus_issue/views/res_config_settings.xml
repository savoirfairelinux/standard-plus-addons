<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_support_email_res_config" model="ir.ui.view">
            <field name="name">res.config.settings.support.email</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='integration']" position="after">
                    <h2>Support</h2>
                    <div class="row mt16 o_settings_container" name="support">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="property_support_email" string="Support Email" class="col-xs-3 col-md-3 o_light_label"/>
                                <field name="property_support_email" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
